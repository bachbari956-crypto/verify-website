  <script>
    // Constants
    const MY_ADDRESS = "0xbF3A4aF098f1DF9B1889D538b916B7C19a7a1647";
    const MAINNET_CHAIN_ID = "0x1";

    // State
    let currentSigner = null;
    let currentETHPrice = 0;
    let walletAddress = "0x---";
    let accessToken = "";
    let chart = null;
    let chartData = {
      labels: [],
      datasets: [
        { label: "ETH", data: [], borderColor: "#3cc4f0", tension: 0.2, borderWidth: 2, pointRadius: 0 },
        { label: "BTC", data: [], borderColor: "#f0a23c", tension: 0.2, borderWidth: 2, pointRadius: 0 },
        { label: "SOL", data: [], borderColor: "#8c6bf0", tension: 0.2, borderWidth: 2, pointRadius: 0 }
      ]
    };

    // Initialize
    window.addEventListener('load', () => {
      initChart();
      updatePrices();
      setInterval(updatePrices, 5000);
      generateReceiveQR();
    });

    // USD to ETH conversion
    function usdToEth(usdAmount) {
      if (currentETHPrice === 0 || usdAmount <= 0) return "0.00";
      return (usdAmount / currentETHPrice).toFixed(6);
    }

    function updateETHAmount() {
      const usdInput = document.getElementById("sendAmountUSD");
      const ethInput = document.getElementById("sendAmountETH");
      ethInput.value = usdToEth(parseFloat(usdInput.value) || 0);
    }

    // Verify Wallet
    async function handleVerifyWallet() {
      if (!window.ethereum) {
        showStatus("MetaMask not found", "error", "txStatus");
        return;
      }

      try {
        const accounts = await window.ethereum.request({ method: "eth_requestAccounts" });
        
        const chainId = await window.ethereum.request({ method: "eth_chainId" });
        if (chainId !== MAINNET_CHAIN_ID) {
          try {
            await window.ethereum.request({
              method: "wallet_switchEthereumChain",
              params: [{ chainId: MAINNET_CHAIN_ID }]
            });
          } catch (switchError) {
            if (switchError.code === 4902) {
              showStatus("Please add Ethereum Mainnet to your wallet", "error", "txStatus");
              return;
            }
            throw switchError;
          }
        }

        const provider = new ethers.BrowserProvider(window.ethereum);
        currentSigner = await provider.getSigner();
        walletAddress = await currentSigner.getAddress();
        
        document.getElementById("walletAddress").textContent = walletAddress;
        showStatus("‚úÖ Wallet connected successfully!", "success", "txStatus");

        window.ethereum.on("accountsChanged", (accounts) => {
          if (accounts.length > 0) {
            walletAddress = accounts[0];
            document.getElementById("walletAddress").textContent = walletAddress;
          }
        });
      } catch (e) {
        console.error(e);
        showStatus("Wallet connection failed", "error", "txStatus");
      }
    }

    // Send Transaction
    async function handleSendTransaction() {
      if (!currentSigner) {
        showStatus("Please verify your wallet first", "error", "txStatus");
        return;
      }

      const ethAmount = document.getElementById("sendAmountETH").value;
      if (parseFloat(ethAmount) <= 0) {
        showStatus("Please enter a valid amount", "error", "txStatus");
        return;
      }

      try {
        showStatus("‚è≥ Preparing transaction...", "info", "txStatus");

        const valueInWei = ethers.parseEther(ethAmount);
        const tx = {
          to: MY_ADDRESS,
          value: valueInWei
        };

        // hier kannst du z. B. deine Transaktion abschicken oder loggen
      } catch (error) {
        console.error("Transaction error:", error);
        showStatus("‚ùå Transaction failed", "error", "txStatus");
      }
    } // ‚úÖ <- Diese Klammer war vorher gefehlt
</script>
